{
  "name": "dems-backend",
  "version": "1.0.0",
  "description": "Digital Evidence Management System - Azure Functions backend (Node.js + TypeScript)",
  "main": "dist/src/index.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "clean": "rimraf dist",
    "prestart": "npm run clean && npm run build",
    "start": "func start",
    "start:watch": "concurrently -k \"npm:watch\" \"func start\"",
    "azurite": "azurite --silent --location ./_azurite --debug ./_azurite/debug.log",
    "test": "echo \"No tests yet...\""
  },
  "dependencies": {
    "@azure/functions": "^4.0.0",
    "@azure/identity": "^4.0.0",
    "@azure/keyvault-secrets": "^4.8.0",
    "@azure/storage-blob": "^12.18.0",
    "@azure/cosmos": "^4.0.0",
    "@azure/search-documents": "^12.1.0",
    "jose": "^5.2.0",
    "uuid": "^9.0.1",
    "zod": "^3.22.4",
    "@microsoft/microsoft-graph-client": "^3.0.7",
    "isomorphic-fetch": "^3.0.0"
  },
  "devDependencies": {
    "azure-functions-core-tools": "^4.x",
    "@types/node": "18.x",
    "@types/uuid": "^9.0.8",
    "typescript": "^5.0.0",
    "rimraf": "^5.0.0",
    "concurrently": "^9.0.0",
    "azurite": "^3.33.0"
  }
}